<div>
  <div class="user-container">
    <%= image_tag @user.photo, :class => "photo", alt: "user profile" %>
    <div class="user-info">
      <h1><%= @user.name%></h1>
      <h4>Number of posts: <%= @user.posts_counter%></h4>
    </div>
  </div>
  <div>
  <button><%=link_to 'Create a Post', new_user_post_path(@user), :class => 'link'%></button>
  </div>

  <% @user.posts.each_with_index do |post, index|%>
      <div class="post">
        <h4><%='Post # '%><%=index + 1%></h4>
        <h3><%=link_to post.title, user_post_path(@user.id, post.id), :class => 'link'%></h3>
        <p><%= post.text %></p>
      <p class="likes-comments">Comments: <%= post.comments_counter%> Likes: <%= post.likes_counter%></p>
      </div>
      <div class="comments">
        <% post.comments.each do |comment|%>
          <p><%= User.find(comment.author_id).name %>: <%= comment.text %></p>
        <%end%>
      </div>
    <%end%>
     <button>Pagination</button>
