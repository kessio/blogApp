<div>
  <div class="user-container">
    <div class="photo"></div>
    <div class="user-info">
      <h1><%= @user.name%></h1>
      <h4>Number of posts: <%= @user.posts_counter%></h4>
    </div>
  </div>
  <div>
  <button><%=link_to 'Create a Post', new_user_post_path(@user), :class => 'link'%></button>
  </div>

  <% @posts.each_with_index do |post, index|%>
      <div class="post">
        <h3><%=link_to 'Post # ', user_post_path(@user.id, post), :class => 'link'%><%=index + 1%></h3>
        <p><%= post.text%></p>
      <p class="likes-comments">Comments: <%= post.comments_counter%> Likes: <%= post.likes_counter%></p>
      </div>
      <div class="comments">
        <% post.recent_comments.each do |comment|%>
          <p><%= User.find(comment.author_id).name %>: <%= comment.text %></p>
        <%end%>
      </div>
    <%end%>
     <button>Pagination</button>
  <div>